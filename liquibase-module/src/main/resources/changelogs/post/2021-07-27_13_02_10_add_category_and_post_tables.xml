<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="liquibase-script"  id="2021-07-27 13:06:10">
        <createTable tableName="categories">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="BIGINT">
                <constraints foreignKeyName="fk_categories_categories1" referencedColumnNames="id" referencedTableName="categories"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="liquibase-script"  id="2021-07-27 13:06:20">
        <createTable tableName="posts">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="content" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints foreignKeyName="fk_posts_users1" referencedColumnNames="id" referencedTableName="users"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints foreignKeyName="fk_posts_categories1" referencedColumnNames="id" referencedTableName="categories"/>
            </column>
            <column name="created_at" type="datetime" defaultValue="now()"/>
            <column name="updated_at" type="datetime"/>
            <column name="profile_id" type="BIGINT"/>
            <column name="group_id" type="BIGINT">
                <constraints foreignKeyName="fk_posts_groups1" referencedColumnNames="id" referencedTableName="groups"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="liquibase-script"  id="2021-07-27 13:06:30">
        <sql splitStatements="false">
            CREATE TRIGGER update_date_posts before update ON posts
            FOR EACH ROW
            EXECUTE PROCEDURE update_date();
        </sql>
    </changeSet>
</databaseChangeLog>