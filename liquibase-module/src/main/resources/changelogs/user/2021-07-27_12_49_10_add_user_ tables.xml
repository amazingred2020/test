<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="liquibase-script"  id="2021-07-27 12:52:10">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(65)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(45)"/>
            <column name="created_at" type="datetime" defaultValue="now()"/>
            <column name="updated_at" type="datetime"/>
            <column name="role_id" type="BIGINT" defaultValue="null">
                <constraints foreignKeyName="fk_users_roles1" referencedColumnNames="id" referencedTableName="roles"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="liquibase-script"  id="2021-07-27 12:52:20">
        <sql splitStatements="false">
            CREATE TRIGGER update_date_users before update ON users
            FOR EACH ROW
            EXECUTE PROCEDURE update_date();
        </sql>
    </changeSet>
    <changeSet author="liquibase-script"  id="2021-07-27 12:52:30">
        <createTable tableName="users_friends">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_users_friends_has_users1" referencedColumnNames="id" referencedTableName="users"/>
            </column>
            <column name="friend_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_users_friends_has_users2" referencedColumnNames="id" referencedTableName="users"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="liquibase-script"  id="2021-07-27 12:52:40">
        <createTable tableName="friend_invite">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_from_id" type="BIGINT">
                <constraints foreignKeyName="fk_friend_invite_users1" referencedColumnNames="id" referencedTableName="users"/>
            </column>
            <column name="user_to_id" type="BIGINT">
                <constraints foreignKeyName="fk_friend_invite_users2" referencedColumnNames="id" referencedTableName="users"/>
            </column>
            <column name="status" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" defaultValue="now()"/>
        </createTable>
    </changeSet>
</databaseChangeLog>